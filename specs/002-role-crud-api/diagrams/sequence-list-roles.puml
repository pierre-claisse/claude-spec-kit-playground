@startuml
skinparam sequenceMessageAlign center

actor "API Client" as client
participant "RoleController" as controller
participant "RoleRepository" as repo
database "PostgreSQL" as db

client -> controller : GET /roles
activate controller

controller -> repo : findAll()
activate repo
repo -> db : SELECT * FROM roles
activate db
db --> repo : rows
deactivate db
repo --> controller : List<Role>
deactivate repo

controller --> client : 200 OK\n[{id, name}, ...]
deactivate controller

@enduml
