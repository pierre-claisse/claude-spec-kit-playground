@startuml
skinparam sequenceMessageAlign center

actor "API Client" as client
participant "UserController" as controller
participant "UserRepository" as userRepo
participant "RoleRepository" as roleRepo
database "PostgreSQL" as db

client -> controller : DELETE /users/{userId}/roles/{roleId}
activate controller

controller -> userRepo : findById(userId)
activate userRepo
userRepo -> db : SELECT * FROM users\nWHERE id = ?
activate db
db --> userRepo : row or empty
deactivate db
userRepo --> controller : Optional<User>
deactivate userRepo

alt user not found
  controller --> client : 404 Not Found\n{user not found}
else user found
  controller -> roleRepo : findById(roleId)
  activate roleRepo
  roleRepo -> db : SELECT * FROM roles\nWHERE id = ?
  activate db
  db --> roleRepo : row or empty
  deactivate db
  roleRepo --> controller : Optional<Role>
  deactivate roleRepo

  alt role not found
    controller --> client : 404 Not Found\n{role not found}
  else role found
    controller -> controller : check user.getRoles()\n.contains(role)

    alt role not assigned to user
      controller --> client : 404 Not Found\n{assignment not found}
    else role is assigned
      controller -> controller : user.getRoles().remove(role)
      controller -> userRepo : save(user)
      activate userRepo
      userRepo -> db : DELETE FROM user_roles\nWHERE user_id = ?\nAND role_id = ?
      activate db
      db --> userRepo : deleted
      deactivate db
      userRepo --> controller : saved User
      deactivate userRepo
      controller --> client : 204 No Content
    end
  end
end

deactivate controller

@enduml
